{
  "compilerOptions": {
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true, // Allows JavaScript files in the project
    "strict": false, // Disable strict mode if needed (set true for strict TypeScript)
    "noEmit": true, // No output files
    "incremental": true, // Improve compilation speed for large projects
    "module": "esnext", // Use ES modules
    "esModuleInterop": true, // Better interop between CommonJS and ES modules
    "moduleResolution": "node",
    "resolveJsonModule": true, // Allows importing .json files
    "isolatedModules": true, // Isolate modules for React/TypeScript compatibility
    "jsx": "preserve", // Keeps JSX in .tsx files, so React can handle it
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // Set base URL to the project root
    "paths": {
      "@/*": ["app/*"]
    }
  },
  "include": [
    "new-types.d.ts", // Include custom type definitions
    "next-env.d.ts", // Automatically generated by Next.js, include environment types
    ".next/types/**/*.ts", // Types generated by Next.js
    "**/*.ts", // Include TypeScript files
    "**/*.tsx", // Include React/TypeScript files
    "**/*.js", // Include JavaScript files
    "**/*.jsx", // Include React/JavaScript files
    "src/**/*", // Include everything under src directory
    "app",
    "components"
  ],
  "exclude": ["node_modules"] // Exclude node_modules
}
